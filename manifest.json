{
  "manifest_version": 3,
  "name": "LLM Mentor",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "background"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "sidebar.html" 
  },
  "host_permissions": ["http://localhost:1234/*"],
  "background": {
    "service_worker": "js/background.js"  
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/sidebar.js"]
    }
  ]
}
  