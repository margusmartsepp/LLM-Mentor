{
  "manifest_version": 3,
  "name": "LLM Mentor",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "sidePanel"],
  "action": {
    "default_popup": "dist/sidebar.html",
    "default_icon": {
      "16": "dist/icons/icon16.png",
      "48": "dist/icons/icon48.png",
      "128": "dist/icons/icon128.png"
    }
  },
  "host_permissions": ["http://localhost:1234/*"],  
  "background": {
    "service_worker": "dist/server-bundle.js"  
  }
}
